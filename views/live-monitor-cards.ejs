        }

        .card-footer {
            padding: 5px 12px;
            background: rgba(0,0,0,0.2);
            border-top: 1px solid rgba(255,255,255,0.05);
            font-size: 0.65rem;
            color: #888;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
            position: relative;
            z-index: 1;
            flex-shrink: 0;
            margin-top: auto;
        }

        .card-footer .material-icons {
            font-size: 0.85rem;
            opacity: 0.6;
        }

        .no-data {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .no-data .material-icons {
            font-size: 64px;
            margin-bottom: 20px;
            opacity: 0.3;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: #aaa;
        }

        .loading .spinner {
            border: 4px solid rgba(25,118,210,0.2);
            border-top: 4px solid #1976d2;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            margin: 0 auto;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Temperature indicators with background glow */
        .data-row.room-temp {
            background: linear-gradient(145deg, rgba(255,107,107,0.08), rgba(255,107,107,0.02));
            border: 1px solid rgba(255,107,107,0.25);
        }

        .data-row.room-temp .data-value {
            background: linear-gradient(135deg, rgba(255,107,107,0.15), rgba(255,107,107,0.08));
            padding: 5px 12px;
            border-radius: 6px;
            border: 1px solid rgba(255,107,107,0.3);
            max-width: calc(100% - 4px);
        }

        .data-row.coil-temp {
            background: linear-gradient(145deg, rgba(78,205,196,0.08), rgba(78,205,196,0.02));
            border: 1px solid rgba(78,205,196,0.25);
        }

        .data-row.coil-temp .data-value {
            background: linear-gradient(135deg, rgba(78,205,196,0.15), rgba(78,205,196,0.08));
            padding: 5px 12px;
            border-radius: 6px;
            border: 1px solid rgba(78,205,196,0.3);
            max-width: calc(100% - 4px);
        }

        .data-row.setpoint {
            background: linear-gradient(145deg, rgba(255,217,61,0.08), rgba(255,217,61,0.02));
            border: 1px solid rgba(255,217,61,0.25);
        }

        .data-row.setpoint .data-value {
            background: linear-gradient(135deg, rgba(255,217,61,0.15), rgba(255,217,61,0.08));
            padding: 5px 12px;
            border-radius: 6px;
            border: 1px solid rgba(255,217,61,0.3);
            max-width: calc(100% - 4px);
        }

        /* Fade in animation for cards */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .device-card {
            animation: fadeInUp 0.5s ease-out backwards;
        }

        .device-card:nth-child(1) { animation-delay: 0.05s; }
        .device-card:nth-child(2) { animation-delay: 0.1s; }
        .device-card:nth-child(3) { animation-delay: 0.15s; }
        .device-card:nth-child(4) { animation-delay: 0.2s; }
        .device-card:nth-child(5) { animation-delay: 0.25s; }
        .device-card:nth-child(6) { animation-delay: 0.3s; }
        .device-card:nth-child(7) { animation-delay: 0.35s; }
        .device-card:nth-child(8) { animation-delay: 0.4s; }

        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            background: rgba(255,255,255,0.1);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background: rgba(255,255,255,0.2);
            transform: translateX(-5px);
        }
    </style>
