        .data-value {
            font-size: 1.25rem;
            font-weight: 700;
            color: #ffffff;
            text-shadow: 0 2px 10px currentColor;
            font-family: 'Roboto Mono', monospace;
            letter-spacing: -0.5px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 100%;
        }

        .data-row.room-temp {
            color: #ff6b6b;
        }

        .data-row.coil-temp {
            color: #4ecdc4;
        }

        .data-row.setpoint {
            color: #ffd93d;
