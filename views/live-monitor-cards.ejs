<body>
    <div class="monitor-container">
        <div class="header-section">
            <h1>
                <span class="material-icons" style="vertical-align: middle; font-size: 2rem;">dashboard</span>
                Live Monitor - Card View
            </h1>
            <div class="header-actions">
                <div class="view-toggle">
                    <a href="/live-monitor" class="view-btn">
                        <span class="material-icons" style="font-size: 18px;">view_list</span>
                        Table
                    </a>
                    <button class="view-btn active">
                        <span class="material-icons" style="font-size: 18px;">dashboard</span>
                        Tiles
                    </button>
                    <a href="/devices-monitor" class="view-btn">
                        <span class="material-icons" style="font-size: 18px;">grid_view</span>
                        Cards
                    </a>
                </div>
                <a href="/" class="back-btn">
                    <span class="material-icons" style="font-size: 18px;">arrow_back</span>
                    Back
                </a>
            </div>
        </div>

        <div id="loading" class="loading">
            <div class="spinner"></div>
            <p>Loading devices...</p>
        </div>

        <div id="cardsContainer" class="cards-grid" style="display: none;"></div>

        <div id="noData" class="no-data" style="display: none;">
            <span class="material-icons">devices_off</span>
            <h3>No devices found</h3>
            <p>Add devices to start monitoring</p>
        </div>
    </div>

    <script>
        const devices = <%- JSON.stringify(devices) %>;
        let ws;
        const deviceData = new Map();

        // Initialize device data
        devices.forEach(device => {
            deviceData.set(device.id, {
                ...device,
                status: 'offline',
                lastUpdate: null,
                roomTemp: '-',
                coilTemp: '-',
                setpoint: '-',
                online: '-',
                rawData: {} // Store accumulated hex values by parameter index
            });
        });

        // Connect to backend WebSocket
        function connectWebSocket() {
            ws = new WebSocket('ws://localhost:2052');

            ws.onopen = () => {
                // mqttManager auto-subscribes to all device topics
                renderCards();
            };

            ws.onmessage = (event) => {
                try {
                    const data = JSON.parse(event.data);
                    
                    if (data.type === 'mqtt_message' && data.data) {
                        handleMqttMessage(data.data);
                    }
                } catch (error) {
                    console.error('Error parsing WebSocket message:', error);
                }
            };

            ws.onclose = () => {
                console.log('WebSocket disconnected. Reconnecting...');
                setTimeout(connectWebSocket, 3000);
            };

            ws.onerror = (error) => {
                console.error('WebSocket error:', error);
            };
        }

        // Convert hex to signed 16-bit integer (same as live-monitor table)
        function hexToSigned16(hexString) {
            if (!hexString || hexString === '-') return '-';
            try {
                const cleanHex = hexString.replace(/^0x/i, '').slice(-4);
                let value = parseInt(cleanHex, 16);
                if (isNaN(value)) return '-';
                if (value & 0x8000) value = value - 0x10000;
                return value;
            } catch (error) {
                return '-';
            }
        }

        // Calculate scaled value (same as live-monitor table)
        function calculateScaledValue(signedValue, scale) {
            if (signedValue === '-' || signedValue === null || signedValue === undefined) return '-';
            if (scale === 10) return (signedValue / 10).toFixed(1);
            return signedValue;
        }

        // Parse MQTT message format (MAC:DATA:start:end:values...) - same as live-monitor table
        function parseMessage(message) {
            try {
                if (!message) return null;
                
                const macMatch = message.match(/^([0-9A-F]{2}:[0-9A-F]{2}:[0-9A-F]{2}:[0-9A-F]{2}:[0-9A-F]{2}:[0-9A-F]{2}):/i);
                if (!macMatch) return null;
                
                const mac = macMatch[1];
                const remainingMessage = message.substring(mac.length + 1);
                const parts = remainingMessage.split(':');
                
                if (parts.length >= 1) {
                    const dataType = parts[0];
                    
                    // กรณี DATA:start:end:value1:value2:...
                    if (dataType === 'DATA' && parts.length >= 3) {
                        const dataStart = parseInt(parts[1]);
                        const dataEnd = parseInt(parts[2]);
                        const dataCount = dataEnd - dataStart + 1;
                        const dataValues = parts.slice(3, 3 + dataCount);
                        
                        return {
                            mac: mac,
                            type: 'DATA',
                            range: `${dataStart}-${dataEnd}`,
                            data: dataValues.map((value, index) => ({
                                label: `data${dataStart + index}`,
                                value: value
                            }))
                        };
                    }
                }
            } catch (error) {
                console.error('Parse error:', error);
            }
            return null;
        }

        // Handle incoming MQTT messages (same as live-monitor table)
        function handleMqttMessage(mqttData) {
            const { topic, message } = mqttData;
            
            // Extract MAC from topic
            let macAddress = null;
            if (topic.startsWith('bifrost_pub_')) {
                macAddress = topic.replace('bifrost_pub_', '');
            } else {
                return;
            }
            
            // Find device by MAC address
            const device = devices.find(d => d.macAddress === macAddress);
            if (!device) return;

            // Parse message string (ไม่ใช่ JSON.parse)
            const parsedMessage = parseMessage(message);
            
            if (!parsedMessage || parsedMessage.type !== 'DATA') {
                return;
            }
            
            const deviceInfo = deviceData.get(device.id);
            
            if (deviceInfo) {
                deviceInfo.status = 'online';
                deviceInfo.lastUpdate = new Date();
                
                // แปลง parsedMessage.data array และรวมกับ rawData เดิม (same as live-monitor table)
                parsedMessage.data.forEach(item => {
                    const idx = parseInt(item.label.replace('data', ''));
                    deviceInfo.rawData[idx] = item.value;
                });
                
                // ใช้ rawData ที่รวมแล้ว
                const messageData = deviceInfo.rawData;
                
                // Parse hex values (same as live-monitor table)
                const parseHexValue = (hexValue, scale = 10) => {
                    const signedValue = hexToSigned16(hexValue);
                    const scaledValue = calculateScaledValue(signedValue, scale);
                    return scaledValue !== '-' ? scaledValue : '-';
                };
                
                // Parameter 0: Room Temp
                const hexValue0 = messageData[0];
                if (hexValue0) {
                    const value = parseHexValue(hexValue0, 10);
                    deviceInfo.roomTemp = value !== '-' ? `${value}` : '-';
                }
                
                // Parameter 1: Coil Temp
                const hexValue1 = messageData[1];
                if (hexValue1) {
                    const value = parseHexValue(hexValue1, 10);
                    deviceInfo.coilTemp = value !== '-' ? `${value}` : '-';
                }
                
                // Parameter 60: Setpoint
                const hexValue60 = messageData[60];
                if (hexValue60) {
                    const value = parseHexValue(hexValue60, 10);
                    deviceInfo.setpoint = value !== '-' ? `${value}` : '-';
                }
                
                deviceInfo.online = calculateOnlineTime(deviceInfo.lastUpdate);
                
                deviceData.set(device.id, deviceInfo);
                updateCard(device.id);
            }
        }

        // Calculate online time
        function calculateOnlineTime(lastUpdate) {
            if (!lastUpdate) return '-';
            
            const now = new Date();
            const diff = now - lastUpdate;
            const seconds = Math.floor(diff / 1000);
            const minutes = Math.floor(seconds / 60);
            const hours = Math.floor(minutes / 60);
            const days = Math.floor(hours / 24);

            if (days > 0) return `${days}d ${hours % 24}h`;
            if (hours > 0) return `${hours}h ${minutes % 60}m`;
            if (minutes > 0) return `${minutes}m`;
            return `${seconds}s`;
        }

        // Render all cards
        function renderCards() {
            const container = document.getElementById('cardsContainer');
            const loading = document.getElementById('loading');
            const noData = document.getElementById('noData');
            
            if (devices.length === 0) {
                loading.style.display = 'none';
                noData.style.display = 'block';
                return;
            }

            loading.style.display = 'none';
            container.style.display = 'grid';
            container.innerHTML = '';

            // Natural sort by device name
            const sortedDevices = [...devices].sort((a, b) => {
                return a.name.localeCompare(b.name, undefined, { numeric: true, sensitivity: 'base' });
            });

            sortedDevices.forEach(device => {
                const deviceInfo = deviceData.get(device.id);
                const card = createCard(device, deviceInfo);
                container.appendChild(card);
            });
        }

        // Create a single card
        function createCard(device, deviceInfo) {
            const card = document.createElement('div');
            card.className = `device-card ${deviceInfo.status}`;
            card.id = `card-${device.id}`;

            card.innerHTML = `
                <div class="card-header">
                    <h3 class="device-name">${device.name}</h3>
                    <div class="status-indicator ${deviceInfo.status}"></div>
                </div>
                <div class="card-body">
                    <div class="data-row room-temp">
                        <span class="data-label">Room Temp</span>
                        <span class="data-value temp" id="roomTemp-${device.id}">${deviceInfo.roomTemp}°C</span>
                    </div>
                    <div class="data-row coil-temp">
                        <span class="data-label">Coil Temp</span>
                        <span class="data-value coil" id="coilTemp-${device.id}">${deviceInfo.coilTemp}°C</span>
                    </div>
                    <div class="data-row setpoint">
                        <span class="data-label">Setpoint</span>
                        <span class="data-value setpoint-val" id="setpoint-${device.id}">${deviceInfo.setpoint}°C</span>
                    </div>
                </div>
                <div class="card-footer" id="footer-${device.id}">
                    <span class="material-icons">schedule</span>
                    ${deviceInfo.status === 'online' ? 'Online: ' + deviceInfo.online : 'Offline'}
                </div>
            `;

            return card;
        }

        // Update a specific card
        function updateCard(deviceId) {
            const deviceInfo = deviceData.get(deviceId);
            const card = document.getElementById(`card-${deviceId}`);
            
            if (!card || !deviceInfo) return;

            // Update card class
            card.className = `device-card ${deviceInfo.status}`;

            // Update status indicator
            const indicator = card.querySelector('.status-indicator');
            indicator.className = `status-indicator ${deviceInfo.status}`;

            // Update values
            const roomTempEl = document.getElementById(`roomTemp-${deviceId}`);
            const coilTempEl = document.getElementById(`coilTemp-${deviceId}`);
            const setpointEl = document.getElementById(`setpoint-${deviceId}`);
            const footerEl = document.getElementById(`footer-${deviceId}`);

            if (roomTempEl) roomTempEl.textContent = deviceInfo.roomTemp !== '-' ? `${deviceInfo.roomTemp}°C` : '-';
            if (coilTempEl) coilTempEl.textContent = deviceInfo.coilTemp !== '-' ? `${deviceInfo.coilTemp}°C` : '-';
            if (setpointEl) setpointEl.textContent = deviceInfo.setpoint !== '-' ? `${deviceInfo.setpoint}°C` : '-';
            if (footerEl) footerEl.textContent = deviceInfo.status === 'online' ? `Online: ${deviceInfo.online}` : 'Offline';
        }

        // Update online times every second
        setInterval(() => {
            deviceData.forEach((deviceInfo, deviceId) => {
                if (deviceInfo.status === 'online' && deviceInfo.lastUpdate) {
                    deviceInfo.online = calculateOnlineTime(deviceInfo.lastUpdate);
                    const footerEl = document.getElementById(`footer-${deviceId}`);
                    if (footerEl) {
                        footerEl.textContent = `Online: ${deviceInfo.online}`;
                    }
                }
            });
        }, 1000);

        // Initialize
        connectWebSocket();
    </script>
</body>
